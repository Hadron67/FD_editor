<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">
        <TableRow>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToStraightLine"
                app:LineType="STRATE_LINE"/>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToDashedLine"
                app:LineType="DASHED_LINE"/>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToDoubleLine"
                app:LineType="DOUBLE_LINE"/>
        </TableRow>
        <TableRow>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToArrowedLine"
                app:LineType="ARROWED_STRATE_LINE"/>
            <views.LineView
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToArrowedDashedLine"
                app:LineType="ARROWED_DASHED_LINE"/>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToArrowedDoubleLine"
                app:LineType="ARROWED_DOUBLE_LINE"/>
        </TableRow>
        <TableRow>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToPhotonLine"
                app:LineType="PHOTON_LINE"/>
            <views.LineView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToGluonLine"
                app:LineType="GLUON_LINE"/>
            <views.VertexView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToNVertex"
                app:VertexType="NORMAL_VERTEX"
                />
        </TableRow>
        <TableRow>
            <views.VertexView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:clickable="true"
                android:onClick="selectToCounterVertex"
                app:VertexType="COUNTER_VERTEX"
                />
            <Button
                android:layout_width="0dip"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:text="@string/tool_choose"
                android:clickable="true"
                android:onClick="selectToChooseMode"
                android:textSize="15sp"
                />
            <Button
                android:layout_width="0dip"
                android:layout_height="@dimen/toolbox_itemheight"
                android:background="@drawable/toolbox_item_background"
                android:text="@string/tool_select"
                android:clickable="true"
                android:onClick="selectToSelectMode"
                android:textSize="15sp"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>
